#nav {
    ul {
        list-style: none;
        padding: none;
        margin: none;

        left: 600px;
        position: absolute;
        top: 42px;
        li {
            display: inline-block;
            color: #333333;
            font-family: Arial;
            font-size: 14px;

            a {
                font-size: 14px;
                text-decoration: none;
             color: #333333;
            font-family: Arial;
            }

            a:hover {
                opacity: 0.4;
            }

        }

        li.selected {
            a {
                text-decoration: underline;
            }

            a:hover {
                opacity: 1.0;
            }
        }
    }
}

