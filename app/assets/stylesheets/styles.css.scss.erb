#simplemodal-overlay {
    background-color: black;
    opacity: 0.8;
}

.modalCloseImg {
    background: url("/assets/close_modal.png") no-repeat scroll 0 0 rgba(0, 0, 0, 0);
    cursor: pointer;
    display: inline;
    height: 15px;
    position: absolute;
    right: 0;
    top: -20px;
    width: 15px;
    z-index: 3200;
}

#detail_view {

    width: 1260px;
    background-color: white;
    border-radius: 10px;
    border: solid 1px darkgrey;
    //padding: 14px;

    .photo_box {
        float: left;
        width: 600px;
        margin: 15px;

        h2 {
            font-size: 16px;
            font-family: Arial;
            margin: 0;
            text-align: left;
            margin-top: 5px;
            margin-bottom: 12px;
            color: #666666;
        }
    }

    ul {
        list-style: none;
        margin: 0;
        padding: 0;
        text-align: left;
        li {
            color: #666666;
            font-size: 14px;
            font-family: ARIAL;

        }
    }

    .thumbnail {
        width: 600px;
        height: 600px;
        line-height: 600px;
        background-color: #eeeeee;

        img {
            max-width: 600px;
            max-height: 600px;
            vertical-align: middle;
        }
    }

}

.zoom_slider_wrapper {
